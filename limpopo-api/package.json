{
  "name": "limpopo-api",
  "version": "1.0.0",
  "description": "Supabase-integrated API for Limpopo Connect (migrated from Azure Functions)",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "prestart": "npm run build",
    "start:auth": "node auth.js",
    "start:businesses": "node businesses.js",
    "dev": "npm-run-all --parallel start:auth start:businesses",
    "test": "jest",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint src/ --max-warnings 0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.1",
    "argon2": "^0.31.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "sharp": "^0.34.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^18.0.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "main": "dist/src/functions/*.js"
}
